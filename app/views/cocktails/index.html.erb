<h1>All cocktails</h1>

<p><%= link_to "New cocktail", new_cocktail_path  %></p>

<ul>
  <% @cocktails.each do |cocktail| %>
  <li>
    <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
    <%= link_to "Edit", edit_cocktail_path(cocktail)  %>
    <%= link_to "Delete", cocktail_path(cocktail), method: :delete   %>

  </li>
  <% end %>
</ul>




